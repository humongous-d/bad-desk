<?xml version="1.0" encoding="UTF-8"?>

<?import atlantafx.base.controls.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import me.piguy.baddesk.utils.*?>
<?import org.kordamp.ikonli.javafx.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.piguy.baddesk.pages.panes.UserView">
    <VBox prefHeight="400.0" prefWidth="600.0" spacing="6.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <CustomTextField promptText="Search">
            <left>
                <FontIcon iconLiteral="mdmz-search"/>
            </left>
        </CustomTextField>
        <TableView fx:id="usersTable" editable="true">
            <columns>
                <TableColumn prefWidth="246.0" sortable="false" text="Name">
                    <cellValueFactory>
                        <RecordValueFactory value="name" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="246.0" sortable="false" text="username">
                    <cellValueFactory>
                        <RecordValueFactory value="username" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="246.0" sortable="false" text="role">
                    <cellValueFactory>
                        <RecordValueFactory value="role" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
    </VBox>
    <Button fx:id="addUser" alignment="BOTTOM_LEFT" text="New User" AnchorPane.bottomAnchor="10"
            AnchorPane.rightAnchor="10">
        <graphic>
            <FontIcon iconLiteral="mdal-add"/>
        </graphic>
        <cursor>
            <Cursor fx:constant="HAND"/>
        </cursor>
    </Button>
</AnchorPane>
